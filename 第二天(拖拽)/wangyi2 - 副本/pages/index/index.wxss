/* nav */
.indexContainer .navList{
  display: flex;
  justify-content: space-around;
}
.indexContainer .navList .navItem{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.indexContainer .navList .navItem .iconfont{
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  background-color: red;
  color: #fff;
  border-radius: 50%;
  font-size: 48rpx;
  margin: 20rpx 0;
  text-indent: 5rpx;
}
.indexContainer .navList .navItem .navText{
  font-size: 28rpx;
}

/* recommend */
.indexContainer .recommend{
  padding: 20rpx;
}

.header .title{
  color: #aaa;
  /* line-height: 70rpx; */
  margin: 20rpx 0;
}
.header .content{
  display: flex;
  justify-content: space-between;
}
.header .content .rightText{
  border: 2rpx solid #aaa;
  width: 150rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
}

.indexContainer .recommend .recommendScroll{
  height: 300rpx;
  display: flex;
}

.indexContainer .recommend .recommendScroll .scrollItem{
  display: flex;
  flex-direction: column;
  margin-right: 20rpx;
}
.indexContainer .recommend .recommendScroll .scrollItem .itemImg{
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  flex-shrink: 0;
}
.indexContainer .recommend .recommendScroll .scrollItem .itemText{
  width: 200rpx;
  /* 单行文本溢出变三个点 */
  /* white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; */

  /* 多行文本溢出变三个点 */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;   /** 多行文本溢出...*/
  overflow: hidden; 
  font-size: 28rpx;
}

/* rank */
.indexContainer .rank{
  padding: 20rpx;
}

.indexContainer .rank .rankSwiper{
  height: 400rpx;
}

.indexContainer .rank .rankSwiper .swiperItem{
  height: 400rpx;
}

.indexContainer .rank .rankSwiper .swiperItem .main{
  height: 400rpx;
  width: 85%;
  background-color: #888;
  margin: 0 auto;
  padding: 20rpx;
}

.indexContainer .rank .rankSwiper .swiperItem .main .title{
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.indexContainer .rank .rankSwiper .swiperItem .main .songList .songItem{
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.indexContainer .rank .rankSwiper .swiperItem .main .songList .songItem .songImg{
  width: 100rpx;
  height: 100rpx;
}

.indexContainer .rank .rankSwiper .swiperItem .main .songList .songItem .count{
  margin: 0 60rpx;
}

/* 单行文本超出用三个点 */
.indexContainer .rank .rankSwiper .swiperItem .main .songList .songItem .songName{
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }










